<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop=".5dp"
    android:paddingBottom=".5dp"
    tools:context="com.bluetoothexample.MainActivity">

    <Button
        android:id="@+id/powerOneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Bluetooth"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Bluetooth"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/powerOffeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apagar Bluetooth"
        android:textAllCaps="false"/>

    <ListView
        android:id="@+id/listBluetooth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"/>

</LinearLayout>
